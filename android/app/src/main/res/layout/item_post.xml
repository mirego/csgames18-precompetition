<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_author"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginTop="9dp"
        android:textColor="@color/almostBlack"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ruben Gonzalez-Rubio"
        tools:layout_editor_absoluteX="12dp" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginTop="4dp"
        android:paddingBottom="9dp"
        android:textColor="@color/almostBlack"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_author"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing eli. Praesent lacinia consectetur risus non cursus. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas."
        tools:layout_editor_absoluteX="12dp" />

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/rb_rating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:background="@color/colorPrimary"
        tools:minHeight="200dp"
        android:visibility="gone"
        tools:layout_editor_absoluteX="0dp" />

    <VideoView
        android:id="@+id/vv_video"
        android:layout_height="150dp"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rb_rating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:background="@color/colorPrimary"
        tools:minHeight="200dp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="0dp" />

    <RatingBar
        android:id="@+id/rb_rating"
        app:layout_constraintTop_toBottomOf="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressBackgroundTint="@color/warm_grey"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="1.0" />

</android.support.constraint.ConstraintLayout>