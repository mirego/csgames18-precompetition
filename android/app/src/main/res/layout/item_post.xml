<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <TextView
        android:id="@+id/tv_faculty"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/warm_grey"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="AGES"
        app:layout_constraintLeft_toRightOf="@+id/tv_author" />



    <TextView
        android:id="@+id/tv_faculty_name"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textColor="@color/almostBlack"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Ruben Gonzalez-Rubio"
        tools:layout_editor_absoluteX="0dp" />


    <TextView
        android:id="@+id/tv_score"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:paddingBottom="9dp"
        android:textColor="@color/almostBlack"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="0dp" />



    <ImageView
        android:id="@+id/iv_photo_faculty"
        android:layout_height="100dp"
        android:layout_width="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />


    <TextView
        android:id="@+id/tv_author"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textColor="@color/almostBlack"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_faculty"

        tools:text="Ruben Gonzalez-Rubio" />


    <TextView
        android:id="@+id/tv_message"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="9dp"
        android:textColor="@color/almostBlack"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_faculty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing eli. Praesent lacinia consectetur risus non cursus. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas."
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:background="@color/colorPrimary"
        tools:minHeight="200dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/iv_photo"
        tools:layout_editor_absoluteX="0dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:text="LIKE IT !" />

    <TextView
        android:id="@+id/tv_likes"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textColor="@color/almostBlack"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/iv_photo"
        app:layout_constraintStart_toEndOf="@+id/button_id" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>